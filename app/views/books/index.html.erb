<div class="container mt-3">
  <div class="row">
    
    <!--error message-->
    <%= render 'layouts/error', obj: @book %>
    
  </div>
  
  <div class="row">
    <!--user info-->
    <div class="col-md-3">
      <%= render 'users/info', book: @book, user: current_user %>
    </div>
    
    <!--Book index-->
    <div class="col-md-8 offset-md-1">
      <%= render 'index', books: @books %>
    </div>
  </div>
</div>